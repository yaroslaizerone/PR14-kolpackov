<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/black">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="20dp"
            android:layout_height="21dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/backar"
            android:scaleX="-1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/bt1"
            android:layout_width="183dp"
            android:layout_height="46dp"
            android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/round_2"
            android:drawableStart="@drawable/meatball"
            android:text="Борщ"
            android:textColor="@color/white"
            android:gravity="center"></Button>
        <Button
            android:id="@+id/bt2"
            android:layout_width="183dp"
            android:layout_height="46dp"
            android:layout_marginTop="84dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/round_2"
            android:drawableStart="@drawable/salad"
            android:text="Салат"
            android:textColor="@color/white"
            android:gravity="center"></Button>

        <Button
            android:id="@+id/bt3"
            android:layout_width="183dp"
            android:layout_height="48dp"
            android:layout_marginTop="140dp"
            android:background="@drawable/round_2"
            android:drawableStart="@drawable/pancakes"
            android:gravity="center"
            android:text="Блинчики"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></Button>
        <Button
            android:id="@+id/bt4"
            android:layout_width="183dp"
            android:layout_height="46dp"
            android:layout_marginTop="196dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/round_2"
            android:drawableStart="@drawable/milkshake"
            android:text="Милк-Шейк"
            android:textColor="@color/white"
            android:gravity="center"></Button>
        <Button
            android:id="@+id/bt5"
            android:layout_width="183dp"
            android:layout_height="46dp"
            android:layout_marginTop="252dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/round_2"
            android:drawableStart="@drawable/pasta"
            android:text="Спагетти"
            android:textColor="@color/white"
            android:gravity="center"></Button>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>